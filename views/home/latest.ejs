<% if(prod =="" ) {%>
  <p> no products under this category</p>
<%}%>


<div class="container-fluid" style="margin: 10px">
  <h3><%= prod.name %></h3>
    <div class="row">
      <div class="col-lg-12 " >
        
          <%prod.forEach(function(product){%>
          <div class="column" style="margin-top: 10px">
            <div class="card">
              <a class="btn btn-success" target="_parent" href="/products/products/category/<%=category.sep%>">
                <img class="imgclass" src="/productImage/<%=product.id%>/<%=product.image%>"  alt="Mike" style="height:360px; width:100%;">
              </a>
              <div class="container">
                <h2> </h2>
                <p class="title"><%=product.title %> </p>           
                <p><a href="/products/product/one/<%=product.category%>/<%=product.sep%>" class="btn btn-success">view more product details</a ></p>
              </div>
            </div>
       </div>        
        <%})%>
           
      </div> 
    </div>    
