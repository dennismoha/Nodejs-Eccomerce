<%#products section %>


<div class="container-fluid test" >
   <h3 class="header" style="text-align: center;">All products</h3>
    <div class="row no-gutters" style="padding: 10px 0px; margin: 10px">
      <div class="col-lg-12" id="allproducts">       

     <%products.forEach(function(product) {%>   
         <div class="column">         
          <div class="card">
            <img class="imgclass" src="/productImage/<%=product.id%>/<%=product.image%>" alt="Mike" style="width:100%">
            <div class="container">
              <h2><%=product.title%></h2>
              <p class="title">Category: <%=product.category%></p>
              <p><%-product.description%></p>
              <p>price <%=product.price%>   &nbsp &nbsp Quantity <%=product.quantity%></p>
              <p><a href="/products/product/addToCart/<%=product.id%>" class="btn btn-success"><i class="fas fa-shopping-cart"></i>Add to cart</a></p>
              <p><a class="btn btn-primary" href="/products/product/one/<%=product.category%>/<%=product.sep%>">product details </a></p>
            </div>
          </div>
         
        </div>  
          <%})%>       
   
      </div>
      </div>    
    </div>    
  
  <%# products by category %>

<div class="container-fluid" style="margin: 10px">
  <h3>products by category</h3>
    <div class="row">
      <div class="col-lg-12 " style="background-color: green">
        
          <%category.forEach(function(category){%>
          <div class="column" style="margin-top:10px">
            <div class="card" style="margin: 10px">
              <a class="btn btn-success" target="_parent" href="/products/products/category/<%=category.sep%>">
                <img class="imgclass" src="https://images.unsplash.com/photo-1546630392-db5b1f04874a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60"  alt="Mike" style="height:360px; width:100%;">
              </a>
              <div class="container">
                <h2> </h2>
                
                <p class="title"><%=category.name %> </p>           
               <a href="/products/products/category/<%=category.sep%>" class="button"> <p>view all products</p> </a>
              </div>
            </div>
       </div>        
        <%})%>
           
      </div> 
    </div>    
